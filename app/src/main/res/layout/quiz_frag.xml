<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView android:id="@+id/quiz_now_text_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"

        android:text="@string/quiz_now_label"

        android:padding="10dp"
        android:textAlignment="center"
        />

    <Button android:id="@+id/quiz_fragment_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/quiz_now_button"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/quiz_now_text_view_id"
        android:layout_margin="30dp"
        android:padding="10dp"
        />
</RelativeLayout>